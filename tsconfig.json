{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
